{% extends 'base.html.twig' %}

{% block stylesheets %}

	{{ encore_entry_link_tags('app') }}

{% endblock %}
{% block title %}DVDtheque
{% endblock %}

{% block javascripts %}

	{{ encore_entry_script_tags('app') }}

{% endblock %}
{% block body %}
	<h1 class="display-1 text-center my-2">Liste des DVD</h1>
	<div class="container">
		<div class="row gap-5">
			{% for film in films%}
				<div class="card my-3" style="width: 18rem;">
					<img class="card-img-top" style="height: 15rem" src="{{ vich_uploader_asset(film) }}" alt={{ film.title }}>
					<div class="card-body">
						<h3 class="card-title" style="height: 7rem">{{ film.title }}</h3>
						<p class="card-text">{{ film.category }}</p>
						<a href="{{ path("film_show", { id: film.id }) }}" class="btn btn-primary">Voir la fiche détaillé</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}