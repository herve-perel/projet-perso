{% extends 'base.html.twig' %}

{% block stylesheets %}

	{{ encore_entry_link_tags('app') }}

{% endblock %}
{% block title %}DVDtheque
{% endblock %}

{% block javascripts %}

	{{ encore_entry_script_tags('app') }}

{% endblock %}
{% block body %}
	<h1 class="display-1 text-center my-2">Liste des DVD</h1>

	<div class="container">
		<div class="row">

			{% for film in pagination %}
				<div class="col-lg-3 col-md-6">
					<div class="card my-3">
						<img class="card-img-top" style="height: 15rem" src="{{ vich_uploader_asset(film) }}" alt="{{ film.title }}">
						<div class="card-body bg-primary text-secondary rounded-bottom">
							<h3 class="card-title" style="height: 7rem">{{ film.title }}</h3>
							<p class="card-text">{{ film.category }}</p>
							<a href="{{ path("film_show", { slug: film.slug }) }}" class="btn btn-secondary text-primary">Voir la fiche détaillée</a>
						</div>
					</div>
				</div>

			{% endfor %}

			<div class="d-flex justify-content-center">
				{{ knp_pagination_render(pagination) }}
			</div>

		</div>
	</div>

{% endblock %}
