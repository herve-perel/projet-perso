{% extends 'base.html.twig' %}


{% block title %}
	{{ film.title }}
{% endblock %}


{% block body %}
	<div class="container">
		<div class="media">
			<img class="align-self-start mr-3" src="{{ vich_uploader_asset(film) }}" alt="{{ film.title }} poster">
			<div class="media-body">
				<h1 class="mt-0">{{ film.title }}</h1>

				<p>Synopsis:
					{{ film.synopsis }}</p>
				<p>Catégorie :
					{{ film.category }}</p>
				<p>Année:
					{{ film.year }}</p>
				<p>Réalisateur:</p>
				<p>{{ film.director.name }}</p>
			</div>
		</div>
		<h2>Acteurs :</h2>
		<ul>
			{% for actor in film.actors %}
				<li>
					<a href="{{ path('actor_show', {'slug': actor.slug})}}">{{ actor.name}}</a>
				</li>
			{% else %}
				<li>Aucun acteur pour ce film</li>
			{% endfor %}
		</ul>
		<a class="btn btn-secondary mx-3" href="{{ path('film_index') }}">
			Retour à la liste des films
		</a>
		<a class="btn btn-primary" href="{{ path('film_edit', { slug: film.slug }) }}">
			Modifier le film
		</a>
		{{ include('film/_delete_form.html.twig')}}
	</div>
{% endblock %}
