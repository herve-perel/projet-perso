{% extends 'base.html.twig' %}

{% block title %}Les Acteurs
{% endblock %}

{% block body %}
	<h1 class="text-center my-4">Liste des acteurs
	</h1>
	<ul>
	{% if app.user %}
		<div class="container">
			<a class="btn btn-primary" href="{{ path('actor_new') }}">Ajouter un acteur</a>
		</div>
		{% endif %}
		{% for actor in actors %}
			<div class="container">
				<div class="list-group text-center my-1">
					<a href="{{ path("actor_show", { slug: actor.slug }) }}" class="list-group-item list-group-item-action active">
						{{ actor.name }}
					</a>
				</div>
			</div>
		{% else %}
			Aucun acteur trouv√©e.
		{% endfor %}
	</ul>
{% endblock %}