{% extends 'base.html.twig' %}

{% block title %}Réalisateur
{% endblock %}

{% block body %}
	<div class="actor">
		<h1 class="text-center mt-4">Réalisateur</h1>
		<div class="container">

			<div class="card rounded">
				<img class="img" src="{{ vich_uploader_asset(director) }}" alt={{ director.name }}>
				<div class="card-body bg-primary text-secondary">
					<h2>{{ director.name }}</h2>
					<p>Age
						{{ director.age}}</p>
					<h5>Biographie</h5>
					<p>
						{{ director.bio}}</p>
				</div>
			</div>
		</div>
	</div>
	<div class="container">

		<h2 class="mt-3">Liste des films</h2>
		{% for film in director.films %}
			<ul>
				<li>{{ film.title }}</li>
			</ul>
			{% else %}
			Aucun film trouvé.
		{% endfor %}
	</div>
	<div class="container">
		<a class="btn btn-outline btn-primary m-2" href="{{ path('director_edit', {'id': director.id}) }}">Modifier</a>
		{{ include('director/_delete_form.html.twig') }}
	</div>
	<a class="btn btn-outline btn-secondary m-2" href="{{ path('director_index') }}">Retour à la liste des acteurs</a>
{% endblock %}
