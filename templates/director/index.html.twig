{% extends 'base.html.twig' %}

{% block title %}Les Réalisateur
{% endblock %}

{% block body %}
	<h1 class="display-1 text-center my-5">Liste des réalisateurs
	</h1>
	<div class="container">
		{% if app.user %}
			<a class="btn btn-primary my-5" href="{{ path('director_new') }}">Ajouter un réalisateur</a>
		{% endif %}
	</div>
	<div class="container">
		<div class="row">
			{% for director in directors %}
				<div class="col-lg-4 col-md-6">
					<div class="card">
						<div class="card-body bg-primary rounded p-0">
							<div class="list-group text-center">
								<a href="{{ path("director_show", { slug: director.slug }) }}" class="list-group-item list-group-item-action active">
									{{ director.name }}
								</a>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				Aucun réalisateur trouvée.
			{% endfor %}
		</div>
	</div>
{% endblock %}
