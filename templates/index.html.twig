{% extends 'base.html.twig' %}

{% block stylesheets %}

	{{ encore_entry_link_tags('app') }}

{% endblock %}
{% block title %}DVDtheque
{% endblock %}

{% block javascripts %}

	{{ encore_entry_script_tags('app') }}

{% endblock %}
{% block body %}
	<div class="homepage">
		<div class="img_homepage"></div>

		<h1 class="display-1 text-center">Dernier ajout</h1>
		<div class="container">
			<div class="row">
				{% for film in films%}
					<div class=" col-lg-3 col-md-6">
						<div class="card my-3 ">
							<img class="card-img-top" src="{{ vich_uploader_asset(film) }}" alt={{ film.title }}>
							<div class="card-body bg-primary text-secondary rounded-bottom">
								<h3 class="card-title">{{ film.title }}</h3>
								<p class="card-text">{{ film.category }}</p>
								<a href="{{ path("film_show", { slug: film.slug }) }}" class="btn btn-secondary text-primary">Voir la fiche détaillé</a>
							</div>
						</div>
					</div>

				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
